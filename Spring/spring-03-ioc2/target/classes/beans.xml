<!--     第三种方式直接通过参数名进行赋值-推荐-->

        <!--
            id:bean 的唯一标识符,也就是相当于我们学的对象名字
            class:bean对应的权限定名:包名+类型
            name:也就是别名,而且name可以起多个别名

        -->
    <bean id="user" class="com.pojo.User" name="user2">

        <constructor-arg name="name" value="斯丹"/>

    </bean>





<!--    别名;如果添加了别名,我们也可以使用别名获取到这个对象-->
    <alias name="user" alias="others"/>


