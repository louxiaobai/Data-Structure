<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.RoleMapper">

<!--    进行添加角色信息-->

    <insert id="add" parameterType="role" >

            insert into smbms_role(id,roleCode,roleName,createdBy,creationDate,modifyBy,modifyDate)
            values (#{id},#{roleCode},#{roleName},#{createdBy},#{creationDate},#{modifyBy},#{modifyDate})
    </insert>

<!--    进行角色查询-->
    <select id="getRoleList" resultType="role">

            select * from smbms_role

    </select>

<!--   根据id进行删除用户信息-->
    <delete id="deleteRoleById">

            delete from smbms_role where id=#{id}

    </delete>
    <update id="modify" parameterType="role">

        update smbms_role
        <set>
                <if test="roleCode!=null">roleCode=#{roleCode},</if>
                <if test="roleName!=null">roleName=#{roleName},</if>
                <if test="createdBy!=null">createdBy=#{createdBy},</if>
                <if test="creationDate!=null">creationDate=#{creationDate},</if>
                <if test="modifyBy!=null">modifyBy=#{modifyBy},</if>
                <if test="modifyDate!=null">modifyDate=#{modifyDate},</if>
        </set>

        <where>
            id=#{id}
        </where>
    </update>

    <select id="getRoleById" resultType="role">

            select * from smbms_role where id=#{id}

    </select>

    <select id="roleCodeIsExist" resultType="int">
       select count(*) from smbms_role
        <where>
            roleCode=#{roleCode}
        </where>
    </select>



</mapper>



