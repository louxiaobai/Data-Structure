<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.ProviderMapper">

<!--    进行添加信息-->
    <insert id="add">

       insert into smbms_provider(id,proCode,proName)
       values (#{id},#{proCode},#{proName})

  </insert>

<!--    通过供应商名称、编码获取供应商列表-模糊查询-providerList-->

    <select id="getProviderList" resultType="provider">

            select * from smbms_provider
            <where>

                <if test="proName!=null"> and proName=#{proName}</if>
                <if test="proCode!=null"> and proCode=#{proCode}</if>

            </where>

    </select>

<!--    通过proId删除Provider-->
    <delete id="deleteProviderById">

        delete  from  smbms_provider
        <where>
            id=#{id}
        </where>

    </delete>

<!--    通过proId获取Provider-->

    <select id="getProviderById" resultType="provider">
            select * from smbms_provider
            <where>
              id=#{id}
            </where>

    </select>

    <update id="modify" parameterType="provider">

            update smbms_provider
            <set>
                <if test="proCode!=null">proCode=#{proCode},</if>
            </set>
            <where>

                id=#{id}

            </where>


    </update>

</mapper>

